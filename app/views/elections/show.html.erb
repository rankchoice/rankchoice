<%- model_class = Election -%>
<div class="page-header">
  <h1>
    <%= @election.title %> Election
    <small>Votes: <%= @election.votes.count %></small>
  </h1>
</div>

<% unless @election.description.blank? %>
<div class="alert alert-success" role="alert">
  <%= @election.description %>
</div>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:candidate0) %>:</strong></dt>
  <dd><%= @election.candidate0 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate1) %>:</strong></dt>
  <dd><%= @election.candidate1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate2) %>:</strong></dt>
  <dd><%= @election.candidate2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate3) %>:</strong></dt>
  <dd><%= @election.candidate3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate4) %>:</strong></dt>
  <dd><%= @election.candidate4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate5) %>:</strong></dt>
  <dd><%= @election.candidate5 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate6) %>:</strong></dt>
  <dd><%= @election.candidate6 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate7) %>:</strong></dt>
  <dd><%= @election.candidate7 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate8) %>:</strong></dt>
  <dd><%= @election.candidate8 %></dd>

  <dt></dt>
  <dd>
    <br>
    <%= link_to "Cast a Vote", new_vote_path(election_id: @election), class: "btn btn-primary" %>
    <%= link_to "View Results", result_election_path(@election), class: "btn btn-default" %>
  </dd>
</dl>
