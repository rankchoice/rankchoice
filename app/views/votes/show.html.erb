<%- model_class = Vote -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:election_id) %>:</strong></dt>
  <dd>
    <% if @vote.election %>
      <%= link_to @vote.election.title, @vote.election %>
    <% else %>
      Invalid Election
    <% end %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:choice0) %>:</strong></dt>
  <dd><%= @vote.choice0 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice1) %>:</strong></dt>
  <dd><%= @vote.choice1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice2) %>:</strong></dt>
  <dd><%= @vote.choice2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice3) %>:</strong></dt>
  <dd><%= @vote.choice3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice4) %>:</strong></dt>
  <dd><%= @vote.choice4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice5) %>:</strong></dt>
  <dd><%= @vote.choice5 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice6) %>:</strong></dt>
  <dd><%= @vote.choice6 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice7) %>:</strong></dt>
  <dd><%= @vote.choice7 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice8) %>:</strong></dt>
  <dd><%= @vote.choice8 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
  <dd><%= @vote.slug %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              votes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vote_path(@vote), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vote_path(@vote),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
